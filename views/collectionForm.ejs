<%- include('header')%>
  <section class="pt-5">
    <div class="container">
      <h2 class="mb-4"><%= title %></h2>
      <form action="" method="post" style="max-width: 30rem">
        <div class="form-group mb-4">
          <label for="name">Name</label>
          <input required type="text" class="form-control bg-dark text-light" id="name" name="name" placeholder="Enter collection name" value="<%= locals.nftCollection === undefined ? '' : locals.nftCollection.name %>">
        </div>
        <div class="form-group mb-4">
          <label for="description">Description</label>
          <textarea required class="form-control bg-dark text-light" id="description" name="description" rows="3"><%= locals.nftCollection === undefined ? '' : locals.nftCollection.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

      <% if (locals.errors) { %>
        <ul class="list-group mt-4">
          <% errors.forEach(error => { %>
            <li class="list-group-item bg-dark text-danger border-danger">! <%= error.msg %></li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  </section>
<%- include('footer')%>