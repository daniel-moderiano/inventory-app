<%- include('header')%>

  <section class="pt-5">
    <div class="container">
      <h2 class="mb-4"><%= title %></h2>
      <% if(creatorsNfts.length > 0){ %>
        <p class="lead mb-4">Delete the following NFTs before attempting to delete this creator.</p>
        <div class="row align-items-center justify-content-center g-4">
          <% creatorsNfts.forEach(nft => { %>
            <div class="col-md">
              <div class="card bg-dark text-light" style="width: 18rem; box-shadow: 0 6.4px 14.4px 0 rgba(180, 180, 180, 0.13), 0 1.2px 3.6px 0 rgba(180, 180, 180, 0.11);">
                <img class="card-img-top" src="data:image/<%=nft.img.contentType%>;base64,
                <%=nft.img.data.toString('base64')%>" alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title mb-4"><a class="link-light" href="/nft<%= nft.url %>"><%= nft.name %></a></h5>
                
                  <p class="card-text">Current price: <span class="text-warning"><%= nft.currentPrice %> Îž</span></p>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p>Do you really want to delete this Creator?</p>
        <form action="" method="post">
          <div class="form-group">
            <input type="hidden" id="creatorid" name="creatorid" required value="<%= creator._id %>" class="form-control">
          </div>
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      <% } %>
    </div>
  </section>

<%- include('footer')%>
