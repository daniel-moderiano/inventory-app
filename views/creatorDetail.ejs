<%- include('header')%>

  <section class="pt-5">
    <div class="container">
      <div class="d-flex align-items-center">
        <h2 class="me-5"><%= title %></h2>
        <div class="d-flex">
          <a href="/creator<%= creator.url %>/update" class="lead pe-4 link-warning">Update</a>
          <a href="/creator<%= creator.url %>/delete" class="lead link-warning">Delete</a>
        </div>
      </div>
      <p class="lead"><%= nftList.length %> items</p>
    </div>
  </section>

  <section class="pt-4">
    <div class="container">
      <h3 class="h4 mb-4"><%= title %> NFTs</h3>
      <% if (nftList.length > 0) { %>
        <div class="row align-items-center justify-content-center g-4">
            <% nftList.forEach(nft => { %>
              <div class="col-md">
                <div class="card bg-dark text-light" style="width: 18rem; box-shadow: 0 6.4px 14.4px 0 rgba(180, 180, 180, 0.13), 0 1.2px 3.6px 0 rgba(180, 180, 180, 0.11);">
                  <img class="card-img-top" src="data:image/<%=nft.img.contentType%>;base64,
                  <%=nft.img.data.toString('base64')%>" alt="Card image cap">
                  <div class="card-body">
                    <h5 class="card-title mb-4"><a class="link-light" href="/nft<%= nft.url %>"><%= nft.name %></a></h5>
                  
                    <p class="card-text">Current price: <span class="text-warning"><%= nft.currentPrice %> Îž</span></p>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
      <% } else { %>
        <p class="lead">There are no NFTs</p>
      <% } %>
    </div>
  </section>

<%- include('footer')%>
