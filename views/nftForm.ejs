<%- include('header')%>
  <section class="pt-5">
    <div class="container">
      <h2 class="mb-4"><%= title %></h2>

      <form action="" method="post" enctype="multipart/form-data" style="max-width: 30rem">
        <div class="form-group mb-4">
          <label for="name">Name</label>
          <input required type="text" class="form-control bg-dark text-light" id="name" name="name" placeholder="Enter NFT name">
        </div>
        <div class="form-group mb-4">
          <label for="description">Description</label>
          <textarea required class="form-control bg-dark text-light" id="description" name="description" rows="3"></textarea>
        </div>
        <div class="form-group mb-4">
          <label for="creator">Creator</label>
          <input required type="text" class="form-control bg-dark text-light" id="creator" name="creator" placeholder="Enter NFT creator name">
        </div>
        <div class="form-group mb-4">
          <label for="nftCollection">Name</label>
          <input required type="text" class="form-control bg-dark text-light" id="nftCollection" name="nftCollection" placeholder="Enter NFT name">
        </div>
        <div class="form-group d-flex flex-column mb-4">
          <label for="img">NFT image</label>
          <input required type="file" class="form-control-file" name="img" id="img">     
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </section>
<%- include('footer')%>